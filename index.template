<!doctype html>
<html>
<head>
    <meta charset="utf-8">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

    <title>{{ title }}</title>
    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.ico"/>
    <meta property="og:title" content="{{ title }}"/>
    <meta name="twitter:title" value="{{ title }}"/>
    <meta property="og:type" content="website"/>
    {%- if card_image_url %}
    <meta property="og:image" content="{{ card_image_url | safe }}"/>
    <meta name="twitter:image" value="{{ card_image_url | safe }}"/>
    {%- endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark sticky-top">
        <div class="container fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"/>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav nav">
                {%- for list_item in lists if not list_item['hidden'] %}
                    <li class="nav-item">
                        <a class="{{ 'nav-link' ~ (' active' if loop.first else '') }}" data-bs-toggle="tab" href="#tab-{{ list_item['title'] | replace(' ', '_') }}">{{ list_item['title'] }}</a>
                    </li>
                {%- endfor %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="tab-content" style="padding-top: 1em;">
    {%- for list_item in lists if not list_item['hidden'] %}
        <div class="tab-pane container fluid {{ 'active' if loop.first else 'fade' }}" id="tab-{{ list_item['title'] | replace(' ', '_') }}">
            <h3>{{ list_item['title'] }}</h3>
            <ol>
            {%- for item in list_item['list'] %}
                <li>{{ item }}</li>
            {%- endfor %}
            </ol>
        </div>
    {% endfor %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>

</body>
</html>
